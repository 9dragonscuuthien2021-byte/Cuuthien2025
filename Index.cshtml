<style>
body, html {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: 'Roboto', sans-serif;
    color: #fff;
    height: 100%;
}

.video-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
}

.video-bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.6);
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(0,0,0,0.3), rgba(0,0,0,0.8));
    z-index: 1;
}

.hero {
    position: relative;
    z-index: 2;
    text-align: center;
    padding-top: 150px;
    animation: fadeIn 1.5s ease;
}

.hero h1 {
    font-size: 60px;
    color: #ffd700;
    text-shadow: 0 0 30px #ff0000, 0 0 60px #ff6600;
    margin-bottom: 10px;
}

.hero p {
    font-size: 22px;
    margin-top: 10px;
    color: #ffcccc;
}

.btn-group {
    margin-top: 30px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
}

.btn {
    padding: 14px 28px;
    background: linear-gradient(90deg, #ff6600, #ff0000);
    border: none;
    border-radius: 10px;
    color: white;
    font-weight: bold;
    text-decoration: none;
    font-size: 18px;
    box-shadow: 0 0 15px #ff0000;
    transition: 0.3s ease;
}

.btn:hover {
    transform: scale(1.08);
    box-shadow: 0 0 25px #ffd700;
}

footer {
    position: absolute;
    bottom: 10px;
    width: 100%;
    text-align: center;
    font-size: 14px;
    color: #aaa;
}

@keyframes fadeIn {
    from {opacity: 0; transform: translateY(20px);}
    to {opacity: 1; transform: translateY(0);}
}
</style>

